<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="50dp"
    tools:context=".SmsHomeActivity">

    <EditText
        android:id="@+id/contact_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:hint="@string/sms_to_hint"/>

    <EditText
        android:id="@+id/msg_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/contact_edit_text"
        app:layout_constraintStart_toStartOf="@+id/contact_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/contact_edit_text"
        android:layout_marginTop="50dp"
        android:hint="@string/sms_send_message_hint"/>

    <Button
        android:id="@+id/send_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/sms_send_btn"
        app:layout_constraintEnd_toEndOf="@+id/msg_edit_text"
        app:layout_constraintStart_toStartOf="@+id/msg_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/msg_edit_text" />


</androidx.constraintlayout.widget.ConstraintLayout>